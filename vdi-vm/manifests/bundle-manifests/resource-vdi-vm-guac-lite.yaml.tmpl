{{- if eq .AppParams.instanceOS "windows"}}

{{- $brokerCookie := .CookieValue }}
{{- $brokerRoute := "broker" }}
{{- $appName := .App }}

apiVersion: v1
kind: Service
metadata:
  name: vm
spec:
  selector:
    app: vm
  ports:
    # Port 80 is the default port routed by the pod broker.
    - port: 80
      name: web
      targetPort: 80
    # guacamole-lite websocket service
    - port: 8080
      name: guac-lite
      targetPort: 8080
    # guacamole-lite-token service
    - port: 8081
      name: token
      targetPort: 8081
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: vm
spec:
  selector:
    matchLabels:
      app: vm
  serviceName: vm
  replicas: 1
  volumeClaimTemplates: []
  template:
    metadata:
      labels:
        app: vm
    spec:
      serviceAccount: {{.Namespace}}

      # Terminate pod after 10 seconds of receiving SIGTERM
      terminationGracePeriodSeconds: 5

      ###
      # Shared directory across containers for guacd logs.
      ###
      volumes:
        - name: guacamole
          emptyDir: {}

      containers:
        ###
        # Guacd container
        ###
        - name: guacd
          image: gcr.io/cloud-solutions-images/vdi-vm-guacd:latest
          command: ["/bin/bash"]
          args:
            - -exc
            - |
              /usr/local/guacamole/sbin/guacd -b 0.0.0.0 -L $GUACD_LOG_LEVEL -f 2>&1 | tee /run/guacamole/guacd.log
          volumeMounts:
            - name: guacamole
              mountPath: /run/guacamole
          ports:
            - name: guacd
              containerPort: 4822
              protocol: TCP
          resources:
            requests:
              cpu: 100m

        ###
        # Guacamole lite container
        ###
        - name: guacamole-lite
          image: gcr.io/cloud-solutions-images/vdi-vm-guacamole-lite:latest
          securityContext:
            privileged: false
          env:
            - name: GUACD_HOST
              value: "localhost"
            - name: GUACD_SECRET_KEY
              value: "{{.CookieValue | sha256sum | trunc 32}}"
          resources:
            requests:
              cpu: 500m
          ports:
            - name: guac-lite
              containerPort: 8080
          livenessProbe:
            httpGet:
              path: /healthz
              port: 8080
              scheme: HTTP
          readinessProbe:
            httpGet:
              path: /healthz
              port: 8080

        ###
        # Guacamole lite token container
        ###
        - name: guacamole-lite-token
          image: gcr.io/cloud-solutions-images/vdi-vm-guacamole-lite-token:latest
          securityContext:
            privileged: false
          env:
            - name: GUACD_HOST
              value: "localhost"
            - name: GUACD_SECRET_KEY
              value: "{{.CookieValue | sha256sum | trunc 32}}"
            - name: WSS_HOSTPATH
              value: "wss://{{.SysParams.Domain}}/{{.App}}/ws/"
          resources:
            requests:
              cpu: 500m
          ports:
            - name: token
              containerPort: 8081
          livenessProbe:
            httpGet:
              path: /healthz
              port: 8081
              scheme: HTTP
          readinessProbe:
            httpGet:
              path: /healthz
              port: 8081

        ###
        # Guacamole lite web container
        ###
        - name: guacamole-lite-web
          image: gcr.io/cloud-solutions-images/vdi-vm-guacamole-lite-web:latest
          securityContext:
            privileged: false
          env:
            - name: GUACD_HOST
              value: "localhost"
          resources:
            requests:
              cpu: 500m
          ports:
            - name: web
              containerPort: 80
          livenessProbe:
            httpGet:
              path: /
              port: 80
              scheme: HTTP
          readinessProbe:
            httpGet:
              path: /
              port: 80

        ###
        # Idle shutdown container
        ###
        - name: watchdog
          image: gcr.io/cloud-solutions-images/vdi-vm-guacd:latest
          command: ["/watchdog.sh"]
          env:
          - name: BROKER_COOKIE
            value: "broker_{{.App}}={{ $brokerCookie }}"
          - name: BROKER_ENDPOINT
            value: "https://{{.SysParams.Domain}}/{{ $brokerRoute }}"
          - name: IN_CLUSTER_BROKER_ENDPOINT
            value: "http://istio-ingressgateway.istio-system.svc.cluster.local/{{ $brokerRoute }}"
          - name: BROKER_HOST
            value: "{{.SysParams.Domain}}"
          - name: IN_CLUSTER
            value: "true"
          - name: CLIENT_ID
            value: "{{.ClientID}}"
          - name: POD_USER
            value: "{{.User}}"
          - name: APP_NAME
            value: "{{ $appName }}"
          - name: WATCHDOG_TIMEOUT
            value: "{{default 600 .AppParams.idleShutdownTimeout}}"
          volumeMounts:
            - name: guacamole
              mountPath: /run/guacamole
{{- end}}